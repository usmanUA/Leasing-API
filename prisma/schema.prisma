generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "darwin-arm64", "darwin", "windows"]
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model  Lease {
    id	String @id @default(uuid())
    companyId	String
    itemId  String
    price   Float
    termMonths	Int
    nominalRatePct  Float
    startDate	DateTime
    upfrontFee	Float
    monthlyFee	Float

    createdAt	DateTime
    schedule	String
    totals  String
    payments	Payment[]
}

model Payment {
    id	String @id @default(uuid())
    leaseId String
    paidAt  DateTime
    amount Float
    lease   Lease @relation(fields: [leaseId], references: [id])
}
